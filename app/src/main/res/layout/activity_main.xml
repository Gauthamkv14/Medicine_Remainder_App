<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E8EAF6"
            android:padding="24dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’Š Medication Reminder"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#3F51B5"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Never miss your medicine again! â°"
                android:textSize="14sp"
                android:textColor="#5C6BC0"
                android:layout_gravity="center"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Timetable button bottom-right above FAB -->
    <Button
        android:id="@+id/btnTimetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timetable"
        android:layout_marginBottom="96dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#6366F1"
        android:textColor="@android:color/white"
        app:layout_anchor="@id/recyclerView"
        app:layout_anchorGravity="bottom|end" />

    <!-- Floating Action Button bottom-right -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Add Medicine"
        android:src="@android:drawable/ic_menu_add"
        app:backgroundTint="#6366F1"
        app:tint="@android:color/white"
        app:fabSize="normal"
        app:layout_anchor="@id/recyclerView"
        app:layout_anchorGravity="bottom|end" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
