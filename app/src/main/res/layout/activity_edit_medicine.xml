<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âœï¸ Edit Medicine"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:gravity="center"
            android:padding="24dp"
            android:background="#E8EAF6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Medicine Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Medicine Name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editMedicineName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:inputType="textCapWords"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Times label -->
            <TextView
                android:id="@+id/editTimesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Times: none"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="12dp"/>

            <!-- Time chips container -->
            <LinearLayout
                android:id="@+id/editTimesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"/>

            <!-- Add Time -->
            <Button
                android:id="@+id/editAddTimeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â° ADD TIME"
                android:layout_marginTop="12dp"/>

            <!-- Weekly days -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly Days"
                android:textStyle="bold"
                android:layout_marginTop="24dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox android:id="@+id/editCbMon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mon"/>
                <CheckBox android:id="@+id/editCbTue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tue"/>
                <CheckBox android:id="@+id/editCbWed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Wed"/>
                <CheckBox android:id="@+id/editCbThu" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Thu"/>
                <CheckBox android:id="@+id/editCbFri" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fri"/>
                <CheckBox android:id="@+id/editCbSat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sat"/>
                <CheckBox android:id="@+id/editCbSun" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sun"/>
            </LinearLayout>

            <!-- Food Timing -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food timing"
                android:textStyle="bold"
                android:layout_marginTop="24dp"/>

            <Spinner
                android:id="@+id/editFoodSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Note -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”” Reminder will be rescheduled to the new time"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="24dp"/>

            <!-- Save -->
            <Button
                android:id="@+id/updateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â˜‘ï¸ Save Changes"
                android:textSize="18sp"
                android:backgroundTint="#9C88FF"
                android:textColor="@android:color/white"
                android:padding="18dp"
                android:layout_marginTop="24dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
