<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="12dp">

    <!-- Date header -->
    <TextView
        android:id="@+id/dateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fri, 28 Nov 2025"
        android:textColor="#3F51B5"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <!-- Card-like container for table -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#EEF0FF"
        android:padding="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <!-- Table header row (static) -->
        <TableLayout
            android:id="@+id/tableHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:shrinkColumns="*"
            android:paddingBottom="6dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TIME"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MEDICINE"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FOOD"
                    android:textStyle="bold"
                    android:gravity="center" />

                <!-- Force two lines for STATUS similar to your earlier screenshot -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="STAT\nUS"
                    android:textStyle="bold"
                    android:gravity="center" />
            </TableRow>
        </TableLayout>

        <!-- Table body: rows will be added programmatically -->
        <TableLayout
            android:id="@+id/tableBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:shrinkColumns="*" />

        <!-- Empty message when no medicines -->
        <TextView
            android:id="@+id/emptyText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="No medicines"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone"
            android:paddingTop="8dp"/>
    </LinearLayout>

</LinearLayout>
